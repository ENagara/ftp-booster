{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start --config app.dev.json",
    "build:android": "expo build:android -t apk",
    "build:ios": "expo build:ios -t archive",
    "build:web:prod": "expo build:web",
    "build:web:dev": "expo build:web --config app.dev.json",
    "deploy:web:prod": "firebase deploy",
    "deploy:web:dev": "firebase hosting:channel:deploy DEV",

    "_sentry:upload":"sentryにsourcemapsをアップロード",
    "sentry:upload:prod": "cross-conf-env sentry-cli releases files npm_package_config_version upload-sourcemaps --ext js --ext map web-build",
    "sentry:upload:dev": "cross-conf-env sentry-cli releases files DEV upload-sourcemaps --ext js --ext map web-build",

    "_release": "ビルドからデプロイまで実行",
    "release:prod": "run-s build:web:prod deploy:web:prod sentry:upload:prod",
    "release:dev": "run-s build:web:dev  deploy:web:dev sentry:upload:dev",

    "_firebase:saveindex": "firestoreで作成したindexをfirestore.indexes.jsonに反映",
    "firebase:saveindex": "firebase firestore:indexes > firestore.indexes.json"
  },
  "config": {
    "_version": "本番のバージョン設定 app.jsonのversionも合わせる",
    "version": "1.0.0"
  },
  "dependencies": {
    "@eva-design/eva": "^1.4.0",
    "@react-native-community/datetimepicker": "^3.0.0",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.9.2",
    "@react-navigation/native": "^5.7.6",
    "@react-navigation/stack": "^5.9.3",
    "@sentry/browser": "^5.29.0",
    "@sentry/react-native": "^2.1.0",
    "@sentry/tracing": "^5.29.0",
    "@ui-kitten/components": "^4.4.1",
    "chart.js": "^2.9.4",
    "expo": "^39.0.3",
    "expo-constants": "^9.2.0",
    "expo-status-bar": "^1.0.2",
    "firebase": "^7.9.0",
    "react": "^16.13.1",
    "react-chartjs-2": "^2.10.0",
    "react-dom": "^16.14.0",
    "react-firebaseui": "^4.1.0",
    "react-native": "^0.63.2",
    "react-native-gesture-handler": "~1.7.0",
    "react-native-modal-datetime-picker": "^9.0.0",
    "react-native-paper": "^4.2.0",
    "react-native-reanimated": "^1.13.1",
    "react-native-safe-area-context": "~3.1.4",
    "react-native-screens": "~2.10.1",
    "react-native-svg": "^12.1.0",
    "react-native-vector-icons": "^7.1.0",
    "react-native-web": "^0.14.4",
    "react-native-webview": "10.7.0"
  },
  "devDependencies": {
    "@types/firebase": "^3.2.1",
    "@types/react": "^16.9.49",
    "@types/react-native": "^0.63.23",
    "cross-conf-env": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.0.3"
  },
  "private": true
}
